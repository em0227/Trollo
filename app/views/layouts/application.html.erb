<!DOCTYPE html>
<html>
  <head>
    <title>Trollo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Zen+Kurenaido&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <% if current_user %>
      <script >
          window.currentUser = {
          "id": <%= current_user.id %>
          }
      </script >
    <% end %>
    <script type="text/javascript">
      window.images = {
        purpleLogo: "<%= image_url("purple_logo.png") %>",
        openingImg: "<%= image_url("hero.png") %>",
        mainBoard: "<%= image_url("main_board.png") %>",
        card: "<%= image_url("card.svg") %>",
        board: "<%= image_url("board.svg") %>"
      }
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
